<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.ecourse.activity.AddCoursesActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/back_addcourse"
            android:layout_alignParentLeft="true"
            android:layout_margin="10dp"
            android:src="@drawable/back"
            android:layout_width="32dp"
            android:layout_height="32dp" />
        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_gravity="center"
                android:textSize="18sp"
                android:text="@string/add_course_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_gravity="center"
                android:text="中国科学技术大学"
                android:id="@+id/tv_add_course_schoolname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </RelativeLayout>
    <EditText
        android:layout_margin="10dp"
        android:hint="@string/add_course_searchhint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <ListView
        android:id="@+id/lv_add_course_courselists"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></ListView>
    <LinearLayout
        android:onClick="addCoursesManually"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@drawable/addcoursemanully"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <TextView
            android:layout_margin="20dp"
            android:textSize="18sp"
            android:text="@string/add_course_coursemannually"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</LinearLayout>
